@article{vavre_within-species_2001,
	title = {Within-Species Diversity of Wolbachia-Induced Cytoplasmic Incompatibility in Haplodiploid Insects},
	volume = {55},
	issn = {1558-5646},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/j.0014-3820.2001.tb00691.x/abstract},
	doi = {10.1111/j.0014-3820.2001.tb00691.x},
	abstract = {{Abstract.—Wolbachia-induced} cytoplasmic incompatibility ({CI)} can have two consequences in haplodiploid insects: fertilized eggs either die (female mortality, {FM)} or they develop into haploid males (male development, {MD).} Origin of this diversity remains poorly understood, but current hypotheses invoke variation in damage suffered by paternal chromosomes in incompatible eggs, thus intermediate {CI} types should be expected. Here, we show the existence of such a particular {CI} type. In the parasitoid wasp Leptopilina heterotoma, we compared {CI} effects in crosses involving lines derived from a single inbred line with various Wolbachia infection statuses (natural tri-infection, mono-infection, or no infection). Tri-infected males induce a {FM} {CI} type when crossed with either uninfected or mono-infected females. Crossing mono-infected males with uninfected females results in almost complete {CI} with both reduced offspring production, indicating partial mortality of fertilized eggs, and increased number of sons, showing haploid male development of others. Mono-infected males thus induce an intermediate {CI} type when mated with uninfected females. The first evidence of this expected particular {CI} type demonstrates that no discontinuity separates {MD} and {FM} {CI} types, which appear to be end points of a phenotypic continuum. Second, different {CI} types can occur within a given species and even within offspring of a single pair. Third, phenotypic expression of the particular {CI} type induced by a given Wolbachia variant depends on other bacterial variants that co-infect the same tissues. These results support the idea that haplodiploids should be helpful in clarifying evolutionary pathways of insect-Wolbachia associations.},
	language = {en},
	number = {8},
	urldate = {2013-01-28},
	journal = {Evolution},
	author = {Vavre, Fabrice and Dedeine, Franck and Quillon, Maud and Fouillet, Pierre and Fleury, Frédéric and Boulétreau, Michel},
	year = {2001},
	keywords = {Cytoplasmic incompatibility, Drosophila, evolution of symbiosis, haplodiploid species, Leptopilina heterotoma, parasitoid, Wolbachia},
	pages = {1710–1714},
	file = {Snapshot:files/47/abstract.html:text/html}
},

