	journal = {Genome research},
	author = {Darby, Alistair C and Armstrong, Stuart D and Bah, Germanus S and Kaur, Gaganjot and Hughes, Margaret A and Kay, Suzanne M and Koldkjær, Pia and Rainbow, Lucille and Radford, Alan D and Blaxter, Mark L and Tanya, Vincent N and Trees, Alexander J and Cordaux, Richard and Wastling, Jonathan M and Makepeace, Benjamin L},
	month = dec,
	year = {2012},
	note = {{PMID:} 22919073},
	pages = {2467--2477},
	file = {Darby 2012 Analysis of gene expression from Wolbachia genome of filarial nematode.pdf:files/45/Darby 2012 Analysis of gene expression from Wolbachia genome of filarial nematode.pdf:application/pdf}
},

